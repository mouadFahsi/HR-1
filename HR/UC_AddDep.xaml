<UserControl x:Class="HR.UC_AddDep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HR"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280" FontSize="16">
    <Grid Background="#7FFFFFFF" Margin="140,46,256,138">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="124*"/>
            <ColumnDefinition Width="263*"/>
            <ColumnDefinition Width="497*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Grid.Column="1" Height="31" Width="52" Grid.Row="1"/>
        <Label Content="Details" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Grid.Column="1" Height="31" Width="58" Grid.Row="1"/>
        <Label Content="Address" Grid.Column="1" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" Height="31" Width="67" RenderTransformOrigin="0.537,0.968" Grid.Row="1"/>
        <Label Content="Type" Grid.Column="1" HorizontalAlignment="Left" Margin="10,254,0,0" VerticalAlignment="Top" Height="31" Width="43" Grid.Row="1"/>
        <Label Content="Contry" Grid.Column="1" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Height="31" Width="57" Grid.Row="1"/>
        <Label Content="Parent Structure" Grid.Column="1" HorizontalAlignment="Left" Margin="10,366,0,0" VerticalAlignment="Top" Height="31" Width="123" Grid.Row="1"/>
        <TextBox Name="tName" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="10,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="300" Background="#7FFFFFFF" Grid.Row="1"/>
        <TextBlock Name="tbDetai" Grid.Column="2" HorizontalAlignment="Left" Margin="10,63,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="71" Width="300" Grid.Row="1"/>
        <TextBlock Name="tbAddress" Grid.Column="2" HorizontalAlignment="Left" Margin="10,162,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="89" Width="300" Grid.Row="1"/>
        <ComboBox Name="cbType" Grid.Column="2" HorizontalAlignment="Left" Margin="10,258,0,0" VerticalAlignment="Top" Width="300" Height="27" Grid.Row="1"/>
        <ComboBox Name="cbContry" Grid.Column="2" HorizontalAlignment="Left" Margin="10,314,0,0" VerticalAlignment="Top" Width="300" Height="27" Grid.Row="1"/>
        <ComboBox Name="cbParent" Grid.Column="2" HorizontalAlignment="Left" Margin="10,370,0,0" VerticalAlignment="Top" Width="300" Height="27" Grid.Row="1"/>
        <Button Content="Cancel" Grid.Column="2" HorizontalAlignment="Left" Margin="85,427,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.253,0.6" Height="25" Grid.Row="1"/>
        <Button Content="Save" Grid.Column="2" HorizontalAlignment="Left" Margin="185,427,0,0" VerticalAlignment="Top" Width="75" Height="25" Grid.Row="1"/>
    </Grid>
</UserControl>
